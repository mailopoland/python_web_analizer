#standard python libs
import os.path
from settings.settings import Settings
from logic.webdeamon import Webdeamon

class AdminDeamon():
    
    def status(self):
        if(os.path.isfile(Settings().process())):
            return "Deamon is running"
        else:
            return "Deamon is not running"
        
    def start(self):
        os.system("webdeamon.py start")
        
    def stop(self): 
        os.system("webdeamon.py stop")