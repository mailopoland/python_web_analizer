os.chdir( os.path.dirname(os.path.realpath(__file__)), os.path.pardir)

from webanalizer.settings_handler import SettingsHandler
from webanalizer.page_analizer import PageAnalizer


class AllsitesAnalizer():
    def __init__(self):
        
